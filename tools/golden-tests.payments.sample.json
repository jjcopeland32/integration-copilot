{
  "name": "PAYMENTS_BASELINE_v1",
  "version": "1.1.0",
  "cases": [
    {
      "id": "pet_login",
      "name": "User login succeeds",
      "type": "positive",
      "request": {
        "method": "GET",
        "url": "/user/login?username=demo&password=secret"
      },
      "expect": {
        "status": 200
      }
    },
    {
      "id": "pet_lookup_repeat",
      "name": "Repeated pet lookup is stable",
      "type": "consistency",
      "request": {
        "method": "GET",
        "url": "/pet/42",
        "repeat": 2,
        "thinkTimeMs": 100
      },
      "expect": {
        "status": 200,
        "uniqueness": "single_resource"
      }
    },
    {
      "id": "inventory_resilience",
      "name": "Inventory endpoint backs off on 429",
      "type": "resilience",
      "request": {
        "method": "GET",
        "url": "/store/inventory",
        "policy": {
          "maxAttempts": 2,
          "baseDelayMs": 150
        },
        "simulate": {
          "rateLimit": true
        }
      },
      "expect": {
        "status": 200,
        "clientBackoff": true
      }
    },
    {
      "id": "place_order",
      "name": "Order placement echoes payload",
      "type": "positive",
      "request": {
        "method": "POST",
        "url": "/store/order",
        "headers": {
          "X-API-Key": "demo-key"
        },
        "body": {
          "id": 123,
          "petId": 42,
          "quantity": 1,
          "status": "placed"
        }
      },
      "expect": {
        "status": 200
      }
    },
    {
      "id": "pet_search",
      "name": "Search by status",
      "type": "positive",
      "request": {
        "method": "GET",
        "url": "/pet/findByStatus?status=available",
        "repeat": 3,
        "thinkTimeMs": 50
      },
      "expect": {
        "status": 200
      }
    }
  ]
}
